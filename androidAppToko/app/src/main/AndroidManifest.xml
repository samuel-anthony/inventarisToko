<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inventaristoko">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SecondTheme">
        <activity
            android:name=".Screens.Front.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.Front.FrontActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Screens.Front.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Screens.Penjualan.PenjualanActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Screens.Penjualan.PenjualanDetailActivity"
            android:parentActivityName=".Screens.Penjualan.PenjualanActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Screens.Pengguna.PenggunaActivity"
            android:parentActivityName=".Screens.Penjualan.PenjualanActivity" />
        <activity
            android:name=".Screens.Pengguna.PenggunaDetailActivity"
            android:parentActivityName=".Screens.Pengguna.PenggunaActivity" />
        <activity
            android:name=".Screens.Pengguna.PenggunaEntryActivity"
            android:parentActivityName=".Screens.Pengguna.PenggunaActivity" />
        <activity
            android:name=".Screens.Meja.MejaActivity"
            android:parentActivityName=".Screens.Penjualan.PenjualanActivity" />
        <activity
            android:name=".Screens.Meja.MejaDetailActivity"
            android:parentActivityName=".Screens.Meja.MejaActivity" />
        <activity
            android:name=".Screens.Meja.MejaEntryActivity"
            android:parentActivityName=".Screens.Meja.MejaActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>