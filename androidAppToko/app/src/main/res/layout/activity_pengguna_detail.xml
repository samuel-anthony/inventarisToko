<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Screens.Pengguna.PenggunaDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDataPenggunaDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:padding="@dimen/card_view_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="@dimen/card_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <TextView
                    android:id="@+id/tvNamaPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_nama_pengguna"/>
                <TextView
                    android:id="@+id/tvValueNamaPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_nama_pengguna"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <TextView
                    android:id="@+id/tvUsernamePengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_username_pengguna"/>

                <TextView
                    android:id="@+id/tvValueUsernamePengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_username_pengguna"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <TextView
                    android:id="@+id/tvEmailPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_email_pengguna"/>

                <TextView
                    android:id="@+id/tvValueEmailPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_email_pengguna"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <TextView
                    android:id="@+id/tvNomorTeleponPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_nomor_telepon_pengguna"/>

                <TextView
                    android:id="@+id/tvValueNomorTeleponPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_nomor_telepon_pengguna"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <TextView
                    android:id="@+id/tvTanggalLahirPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_tanggal_lahir_pengguna"/>

                <TextView
                    android:id="@+id/tvValueTanggalLahirPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/_4dp"
                    android:text="@string/label_tanggal_lahir_pengguna"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnHapusPengguna"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:background="@drawable/button_danger"
            android:text="@string/tombol_hapus"
            android:textColor="@drawable/button_danger_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_12dp"/>

        <Button
            android:id="@+id/btnUbahPengguna"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:background="@drawable/button_secondary"
            android:text="@string/tombol_ubah"
            android:textColor="@drawable/button_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_12dp"/>
    </LinearLayout>
</LinearLayout>