<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Screens.Pengguna.PenggunaEntryActivity"
    android:clickable="true"
    android:focusableInTouchMode="true" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDataMejaEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:padding="@dimen/card_view_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="@dimen/card_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_4dp">

                <TextView
                    android:id="@+id/tvIdMeja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:text="@string/label_id_meja"/>

                <EditText
                    android:id="@+id/etIdMeja"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/input_primary"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:textColor="#000"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_4dp">

                <TextView
                    android:id="@+id/tvNamaMeja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:text="@string/label_nama_meja"/>

                <EditText
                    android:id="@+id/etNamaMeja"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/input_primary"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:textColor="#000"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/_12dp"
                android:layout_marginHorizontal="@dimen/_8dp">

                <Button
                    android:id="@+id/btnGenerate"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/button_secondary"
                    android:text="@string/tombol_generate"
                    android:textColor="@drawable/button_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/_12dp"/>

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo"
                    android:background="@color/colorPrimary"
                    android:layout_margin="@dimen/_8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnKirim"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:background="@drawable/button_success"
            android:text="@string/tombol_kirim"
            android:textColor="@drawable/button_success_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_12dp"/>
    </LinearLayout>
</LinearLayout>