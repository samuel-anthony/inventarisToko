<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Screens.BahanPokok.BahanPokokEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDataBahanPokokEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:padding="@dimen/card_view_margin"
            android:layout_margin="@dimen/activity_horizontal_margin"
            card_view:cardCornerRadius="@dimen/card_radius" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4dp">

                    <TextView
                        android:id="@+id/tvNamaBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="@dimen/_4dp"
                        android:layout_marginVertical="@dimen/_4dp"
                        android:text="@string/label_nama_bahan_pokok"/>

                    <EditText
                        android:id="@+id/etNamaBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/input_primary"
                        android:paddingStart="20dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColor="#000"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4dp">

                    <TextView
                        android:id="@+id/tvHargaBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="@dimen/_4dp"
                        android:layout_marginVertical="@dimen/_4dp"
                        android:text="@string/label_harga_bahan_pokok"/>

                    <EditText
                        android:id="@+id/etHargaBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/input_primary"
                        android:paddingStart="20dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="50"
                        android:textColor="#000"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4dp">

                    <TextView
                        android:id="@+id/tvJumlahBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="@dimen/_4dp"
                        android:layout_marginVertical="@dimen/_4dp"
                        android:text="@string/label_jumlah_bahan_pokok_satuan"/>

                    <EditText
                        android:id="@+id/etJumlahBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/input_primary"
                        android:paddingStart="20dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="50"
                        android:textColor="#000"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_4dp">

                    <TextView
                        android:id="@+id/tvSatuanBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="@dimen/_4dp"
                        android:layout_marginVertical="@dimen/_4dp"
                        android:text="@string/label_satuan_bahan_pokok"/>

                    <Spinner
                        android:id="@+id/spnSatuanBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        style="@style/Widget.AppCompat.Spinner.DropDown"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4dp">

                    <TextView
                        android:id="@+id/tvDaftarPemasokBahanPokok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="@dimen/_4dp"
                        android:layout_marginVertical="@dimen/_4dp"
                        android:text="@string/label_pemasok_bahan_pokok"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_4dp">

                        <Spinner
                            android:id="@+id/spnDaftarPemasok"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Spinner.DropDown"/>

                        <Button
                            android:id="@+id/btnTambahPemasokBahanPokok"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/button_primary"
                            android:text="@string/tombol_tambah"
                            android:textColor="@drawable/button_primary_text"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/_8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDataPemasokBahanPokok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnKirimBahanPokok"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:background="@drawable/button_success"
                android:text="@string/tombol_kirim"
                android:textColor="@drawable/button_success_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="@dimen/_12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
