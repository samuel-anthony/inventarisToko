<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Screens.Resi.ResiActivity"
    android:clickable="true"
    android:focusableInTouchMode="true" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDataPenggunaEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:padding="@dimen/card_view_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="@dimen/card_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_4dp"
                android:paddingBottom="@dimen/_12dp">

                <TextView
                    android:id="@+id/tvTanggalDariResi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:text="@string/label_tanggal_dari_resi"/>

                <EditText
                    android:id="@+id/etTanggalDariResi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/input_primary"
                    android:paddingStart="20dp"
                    android:inputType="date"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_4dp"
                android:paddingBottom="@dimen/_12dp">

                <TextView
                    android:id="@+id/tvTanggalSampaiResi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:padding="@dimen/_4dp"
                    android:layout_marginVertical="@dimen/_4dp"
                    android:text="@string/label_tanggal_sampai_resi"/>

                <EditText
                    android:id="@+id/etTanggalSampaiResi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/input_primary"
                    android:paddingStart="20dp"
                    android:inputType="date"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCariResi"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:background="@drawable/button_primary"
            android:text="@string/tombol_cari_resi"
            android:textColor="@drawable/button_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_12dp"/>
    </LinearLayout>
</LinearLayout>